@if (!string.IsNullOrEmpty(@ViewBag.Message))
{
    <div class="form-group">@ViewBag.Message</div>
    <button type="button" class="btn btn-primary" onclick="window.history.back();">Back</button>
}
else
{
    <div class="form-group">
        <textarea rows="1" class="form-control" placeholder="Hash">@ViewBag.Hash</textarea>
    </div>

    <div class="form-group">
	    <textarea rows="20" class="form-control" placeholder="Code">@ViewBag.Code</textarea>
	</div>
}