@model ContractsDiscovery.Web.App_Data.ContractInteraction

@if (!string.IsNullOrEmpty(@Model.Message))
{
    <div class="form-group">@Model.Message</div>
    <button type="button" class="btn btn-primary" onclick="window.history.back();">Back</button>
}
else
{
  <div class="row call-option-page">
    <div class="col-md-8">
      <div class="titleSection">
        <h1>Transaction Details</h1>
        <h5>Copy the address and data bellow and use them to create a transaction through your Zen wallet</h5>
      </div>
      <div class="form-group">
        <label for="amount">Address:</label>
        <div class="row">
          <div class="col-md-10">
            <input readonly type="text" class="form-control" id="address" name="address" value="@Model.Address"/>
          </div>
          <div class="col-md-2">
            <button class="zen-button zen-grey-button" data-copytarget="#address">Copy</button>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="amount">Data:</label>
        <div class="row">
          <div class="col-md-10">
            <textarea readonly rows="10" class="form-control" id="data" name="data">@Model.Data</textarea>
          </div>
          <div class="col-md-2">
            <button class="zen-button zen-grey-button" data-copytarget="#data">Copy</button>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4"></div>
  </div>
  
}
